<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="?attr/colorPrimaryDark" />
            <gradient android:angle="-90" android:startColor="#00E676" android:endColor="#69F0AE"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="?attr/colorPrimaryDark" />
            <solid android:color="#58857e"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="?attr/colorPrimaryDark" />
            <gradient android:angle="-90" android:startColor="?attr/colorPrimaryDark" android:endColor="?attr/colorPrimary" />
        </shape>
    </item>
</selector>